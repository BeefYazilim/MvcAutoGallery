
@using OtoGaleri_Entities.ValueObject
@model RegisterViewModel
@{
    ViewBag.Title = "Kayıt Sayfası";
}
<title>Kullanıcı Kayıt</title>
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Kayıt Formu</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)@*her türlü hatayı gösterir false ile*@
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Adi, new
                   {
                       @class = "form-control",
                       placeholder = "Adınız"
                   })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Soyad, new
                   {
                       @class = "form-control",
                       placeholder = "Soyadınız"
                   })
                    </div>

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Tc, new
                   {
                       @class = "form-control",
                       placeholder = "TC"
                   })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.EPosta, new
                   {
                       @class = "form-control",
                       placeholder = "E-Posta"
                   })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.DogumTarihi, new
                   {
                       @class = "form-control",
                       placeholder = "ay/gün/yıl"
                   })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-erase" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Telefon, new
                   {
                       @class = "form-control",
                       placeholder = "Telefon numarası"
                   })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Adres, new
                   {
                       @class = "form-control",
                       placeholder = "Adresi"
                   })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.UserName, new
                   {
                       @class = "form-control",
                       placeholder = "Kullanıcı Adı"
                   })
                    </div>
                
                
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new
                   {
                       @class = "form-control",
                       placeholder = "Şifreniz",
                       type = "password"
                   })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new
                   {
                       @class = "form-control",
                       placeholder = "Şifre Tekrarı",
                       type = "password"
                   })
                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt</button>
                    </div>


                </div>
            </div>
        </div>
    </section>

}


