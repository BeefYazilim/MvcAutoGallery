@model OtoGaleri_Entities.Tablolar.KirayaVerilmisArabalar
@{
    ViewBag.Title = "PesonelIslemKullanicisikiralik";
}
<title>Araba İşlem</title>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Kiralanacak Araba</h2>
        <hr />
    </div>

</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Arabalar</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.HangiKullanici, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HangiKullanici.Tc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HangiKullanici, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.KiralamaTarih, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KiralamaTarih, new { htmlAttributes = new { @class = "datapicker form-control" } })
                        @Html.ValidationMessageFor(model => model.KiralamaTarih, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.KiradanAlamaTarih, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.KiradanAlamaTarih, new { htmlAttributes = new { @class = "datapicker form-control" } })
                        @Html.ValidationMessageFor(model => model.KiradanAlamaTarih, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.AlinacakUcret, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AlinacakUcret, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AlinacakUcret, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-plus"></span>Oluştur
                        </button>
                        @Html.ActionLink("Listeye Dön", "Index", "Arabalar", null, new { @class = "btn btn-default" })
                    </div>

                </div>
                
     </div>
        }
</div>
 </div>


@section scripts{
    
<script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>

        $(function(){
            $(".datapicker").datepicker({

                dateFormat: "yy-mm-dd",
                changeMonth: true,
                changeYear: true,
                //  yearRange: "2018:2020",
                minDate: new Date(2018, 0, 1),
                maxDate: new Date(2020, 0, 1),
                showOn: "both"


            });

          });
    </script>
    
    }