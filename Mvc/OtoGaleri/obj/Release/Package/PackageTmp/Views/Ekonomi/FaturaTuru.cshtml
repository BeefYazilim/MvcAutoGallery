@model OtoGaleri_Entities.Tablolar.FaturaTur
@{
    ViewBag.Title = "FaturaTuru";
}


<title>Fatura Türü</title>
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Fatura Türü Oluştur</h2>
        <hr />
    </div>

</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @using (Html.BeginForm())
        {
        

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.FaturaAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FaturaAdi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FaturaAdi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                       
                            <button type="submit" class="btn btn-success">
                                <span class="glyphicon glyphicon-plus"></span>Oluştur
                            </button>

                            @Html.ActionLink("Faturalara Dön", "FaturaGor", "Ekonomi", null, new { @class = "btn btn-default" })
                            @Html.ActionLink("Faturalara Türlerini Gör", "FaturaGor", "Ekonomi", null, new { @class = "btn btn-primary" })
                        
                    </div>
                </div>
            </div>

        }



    </div>
</div>