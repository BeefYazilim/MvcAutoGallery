    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2>Satılacak Araba</h2>
            <hr />
        </div>

    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Arabalar</h4>
