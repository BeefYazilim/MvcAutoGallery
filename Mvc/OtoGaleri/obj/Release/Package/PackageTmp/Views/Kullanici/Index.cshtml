@model IEnumerable<OtoGaleri_Entities.Tablolar.Kullanicilar>
@using OtoGaleri.RazorHelpers
@{
    ViewBag.Title = "Index";
}
<title>Kullanıcılar</title>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Kullanıcılar</h2>
        <hr />
    </div>

</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            @*<a href="/Kullanici/Create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span>Oluştur
            </a>*@
            <a href="@Html.EncodedLink("", "Create", "Kullanici", new { }, new { @class = "form-control"})" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span>Oluştur
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Adi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Soyadi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Eposta)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KayitTarih)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.KullaniciAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sifre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adres)
                </th>


                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soyadi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Eposta)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KayitTarih)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.KullaniciAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sifre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adres)
                    </td>


                    <td>

                        @*<a href="/Kullanici/Edit/@item.Id" class="btn btn-warning">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="/Kullanici/Details/@item.Id" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>
                        <a href="/Kullanici/Delete/@item.Id" class="btn btn-danger">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>*@
                        <a href="@Html.EncodedLink("", "Edit", "Kullanici", new { id=item.Id}, new { @class = "form-control"})" class="btn btn-warning">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="@Html.EncodedLink("", "Delete", "Kullanici", new { id=item.Id}, new { @class = "form-control"})" class="btn btn-danger">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                        <a href="@Html.EncodedLink("", "Details", "Kullanici", new { id=item.Id}, new { @class = "form-control"})" class="btn btn-info">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>

                    </td>
                </tr>
            }

        </table>
    </div>
</div>